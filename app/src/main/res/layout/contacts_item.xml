<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  tools:layout_editor_absoluteY="25dp">

  <ImageView
    android:id="@+id/contacts_image_user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:contentDescription="@string/placeholder"
    android:src="@drawable/ic_thumbs_up_dark"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
  <TextView
    android:id="@+id/contacts_text_name_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/full_name"
    android:textStyle="bold"
    android:textSize="16sp"
    app:layout_constraintStart_toEndOf="@id/contacts_image_user"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/contacts_text_name_value"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:textAlignment="viewStart"
    app:layout_constraintBottom_toBottomOf="@id/contacts_text_name_header"
    app:layout_constraintStart_toEndOf="@+id/contacts_text_name_header"
    app:layout_constraintTop_toTopOf="@id/contacts_text_name_header"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/contacts_text_email_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/email"
    android:textStyle="bold"
    android:textSize="16sp"
    app:layout_constraintStart_toEndOf="@id/contacts_image_user"
    app:layout_constraintTop_toBottomOf="@id/contacts_text_name_header"
    app:layout_constraintBottom_toBottomOf="parent"/>
  <TextView
    android:id="@+id/contacts_text_email_value"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:ellipsize="end"
    android:singleLine="true"
    android:textAlignment="viewStart"
    app:layout_constraintBottom_toBottomOf="@id/contacts_text_email_header"
    app:layout_constraintStart_toEndOf="@+id/contacts_text_email_header"
    app:layout_constraintTop_toTopOf="@id/contacts_text_email_header"
    app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>