<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_marginBottom="@dimen/activity_vertical_margin">

  <TextView
    android:id="@+id/friend_item_name"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:singleLine="true"
    android:text="@string/placeholder"
    android:textSize="18sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/friend_item_status"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="@dimen/default_view_margin"
    android:layout_marginEnd="@dimen/default_view_margin"
    android:layout_marginBottom="@dimen/default_view_margin"
    app:layout_constraintBottom_toTopOf="@id/friend_item_last_timestamp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/friend_item_name"
    android:text="@string/placeholder"/>
  <TextView
    android:id="@+id/friend_item_last_timestamp"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="@dimen/default_view_margin"
    android:layout_marginEnd="@dimen/default_view_margin"
    android:layout_marginBottom="@dimen/default_view_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/friend_item_name"
    android:text="@string/placeholder"
    android:textColor="@color/colorAccent"/>

</android.support.constraint.ConstraintLayout>